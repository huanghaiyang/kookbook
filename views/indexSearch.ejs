<!DOCTYPE html>
<div style='margin:0px;background-color:#F5F5F5;padding-top:5px;'>
	<div class="container" style='margin-bottom:0px;margin-top:0px;padding:0px;'>
		<div class='span12' style='text-align:center;margin-left:0px;'>
			<div class="input-append">
			  <%
			  	if(locals.searchName != null)
			  	{
			  		%>
			  		<input class="span7" type="text" style='vertical-align:middle;margin-top:8px;margin-right:0px;' id='searchName' name='searchName' placeholder='搜索作者或者书籍' value="<%=unescape(locals.searchName)%>">
			  		<%
			  	}
			  	else
			  	{
			  		%>
			  		<input class="span7" type="text" style='vertical-align:middle;margin-top:8px;margin-right:0px;' id='searchName' name='searchName' placeholder='搜索作者或者书籍'>
			  		<%
			  	}
			  %>
			  <button class="btn" type="button" style='margin-left:-4px;' action='searchBooks' id='searchBtn' tip='点击搜索作者或者书籍信息'><i class=" icon-search icon-black"></i>搜索</button>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function () {
		// 按钮点击事件
		$('#searchBtn').bind('click' , function(){
			var $me = $(this);
			var action = $me.attr('action');
			search(action) ; 
		}); 
		// input回车事件
		$('#searchName').bind('keypress',function(event){
			if(event.keyCode == "13")    
            {
            	var action = $('#searchBtn').attr('action');
                search(action);
            }
		});
		function search(action){
			window.location.href = "/server/" + action + '?searchName=' + escape($('#searchName').val());
		}
	});
</script>