<!DOCTYPE html>
<html>
<%-include header%>
<%-include indexSearch%>
<%-include userReadStatus%>
<div class="container" style='margin-top:20px;'>
	<div class="row">
		<div class='span12'>
			<%-include userSettingTab%>
<form class="form-horizontal" method="post" action="/userDetailInfo">
	<fieldset id="form_field">
		<div class="control-group">
			<div class="control-label" for="name">用户名:</div>
			<div class="controls">
				<input type="text" class="input-xlarge" id="name" name="name" placeholder="数字、字母或者下划线" autocomplete="off" required value='<%=user.name%>'>
				<p class="help-inline"></p>
			</div>
		</div>
		<div class="control-group">
			<div class="control-label" for="email">电子邮件:</div>
			<div class="controls">
				<input type="email" class="input-xlarge" id="email" name="email" placeholder="xx@xx.com" autocomplete="off" required value="<%=user.email%>">
				<p class="help-inline"></p>
			</div>
		</div>

		<div class="control-group">
			<div class="control-label" for="httpAvatar">定义头像:</div>
			<div class="controls">
				<input type="text" class="input-xlarge" id="httpAvatar" name="httpAvatar" placeholder="有效的外链地址" value="<%=user.httpAvatar ? user.httpAvatar :''%>">
				<p class="help-inline"></p>
			</div>
		</div>
		<div class="control-group">
			<div class="control-label" for="up_avatar">上传头像:</div>
			<div class="controls">
				<div class="input-prepend" id='up_avatar'>
				    <button type="button" class="btn"><img class='icon-arrow-up'><a href='/userUploadAvatars'>上传</a></button>
				    <input type="text" class="input-large">
				</div>
			</div>
		</div>
		<div class="control-group">
			<div class="control-label" for="sex">性别:</div>
			<div class="controls">
				<%
					if(user.sex == 1)
					{
						%>
							<label class="radio inline">
								<input id="sex1" type="radio" checked value="1" name="sex"></input>
								男
						    </label>
						    	<label class="radio inline">
						    	<input id="sex1" type="radio" value="0" name="sex"></input>
						    	女
						    </label>
						<%
					}
					else if(user.sex == 0)
					{
						%>
							<label class="radio inline">
								<input id="sex1" type="radio" value="1" name="sex"></input>
								男
						    </label>
						    	<label class="radio inline">
						    	<input id="sex1" type="radio" checked value="0" name="sex"></input>
						    	女
						    </label>
						<%
					}
					else
					{
						%>
							<label class="radio inline">
								<input id="sex1" type="radio" value="1" name="sex"></input>
								男
						    </label>
						    	<label class="radio inline">
						    	<input id="sex1" type="radio" value="0" name="sex"></input>
						    	女
						    </label>
						<%
					}
				%>
			</div>
		</div>
		<div class="control-group">
			<div class="control-label" for="province">所在地:</div>
			<div class="controls">
				<select id="province" name="province" style="width:100px;">
					<option>请选择...</option>
				    <option>黑龙江</option>
				    <option>河北</option>
				    <option>河南</option>
				    <option>陕西</option>
				</select>
				<select id="city" name="city" style="width:100px;">
					<option>请选择...</option>
				    <option>哈尔滨市</option>
				    <option>齐齐哈尔</option>
				    <option>大庆</option>
				</select>
			</div>
		</div>
		<div class="control-group">
			<div class="control-label" for="website">个人网址:</div>
			<div class="controls">
				<input type="text" class="input-xlarge" id="website" name="website" value='<%=user.website ? user.website :''%>' placeholder='您的个人空间或博客'>
				<p class="help-inline"></p>
			</div>
		</div>
		<div class="control-group">
			<div class="control-label" for="signature">个性签名:</div>
			<div class="controls">
				<input type="text" class="input-xlarge" id="signature" name="signature" placeholder='人如其言' value='<%=user.signature?user.signature:''%>'>
				<p class="help-inline"></p>
			</div>
		</div>
		<div class="control-group">
			<div class="control-label" for="instruction">个人简介:</div>
			<div class="controls">
				<textarea id="instruction" class="input-xlarge" rows="4" name="instruction" placeholder='说点什么吧'><%=user.instruction?user.instruction:''%></textarea>
				<p class="help-inline"></p>
			</div>
		</div>
		<div class="control-group">
			<div class="control-label" for="sina">新浪微博:</div>
			<div class="controls">
				<input type="text" class="input-xlarge" id="sina" name="sina" value='<%=user.sina ?user.sina:''%>'>
				<p class="help-inline">@sina.com</p>
			</div>
		</div>
		<div class="control-group">
			<div class="control-label" for="tencent">腾讯微博:</div>
			<div class="controls">
				<input type="text" class="input-xlarge" id="tencent" name="tencent" value='<%=user.tencent?user.tencent:''%>'>
				<p class="help-inline">@qq.com</p>
			</div>
		</div>
		<div class="form-actions">
			<button class="btn btn-primary" type="submit">确定</button>
			<button class="btn btn-inverse" type="cancel">取消</button>
		</div>
	</fieldset>
</form>
</div>
</div></div>
</html>